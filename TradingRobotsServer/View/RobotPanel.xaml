            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <TabStrategy xmlns="clr-namespace:TradingRobotsServer.View"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
